<%= if @next_meetup do %>
  <div class="row marketing">
    <div class="col-sm-12">
      <h4><%= next_or_most_recent_event(@next_meetup.utc_datetime) %></h4>
    </div>

    <div class="col-sm-6">
      <p class="lead"><%= @next_meetup.name %></p>
    </div>

    <div class="col-sm-6">
      <p><%= format_montreal_time(@next_meetup.utc_datetime) %></p>
      <p>
        <%= @next_meetup.venue_name %><br/>
        <%= @next_meetup.venue_address %>
      </p>
    </div>

    <div class="col-sm-12">
      <p>Learn more on <a target="_blank" href=<%= @next_meetup.url %>>Meetup.com</a></p>
    </div>
  </div>
<% end %>

